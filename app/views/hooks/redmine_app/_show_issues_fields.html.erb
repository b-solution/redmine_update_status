
<%
   @issue = @time_entry.issue
   @project = @issue.project
   @allowed_statuses = @issue.new_statuses_allowed_to(User.current)
   if @issue.safe_attribute?('done_ratio') && @issue.leaf? && Issue.use_field_for_done_ratio? %>
    <p>
      <label>
        <%= l(:field_done_ratio) %>
      </label>
      <%= select_tag :done_ratio, options_for_select( ((0..10).to_a.collect {|r| ["#{r*10} %", r*10] })), :required => @issue.required_attribute?('done_ratio') %></p>
<% end %>
<p>
  <label>
    <%= l(:field_status) %>
  </label>
  <%= select_tag :status_id, options_for_select(@allowed_statuses.collect {|p| [p.name, p.id]}), {:required => true} %></p>